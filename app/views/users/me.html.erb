<h1>Welcome <%= current_user.email %></h1>

<h3>Here are the list of your event types:</h3>

<%= link_to "Create new event type", new_event_type_url %>

<% @event_types.each do |event_type| %>
  <div class="user-event-type">
    <p><%= event_type.name %> | <%= event_type.slug %></p>
    <p><%= event_type.start_available_period %></p>
    <p><%= event_type.end_available_period %></p>
    <p><%= event_type.duration %></p>
    <p><%= event_type.before_break_time %></p>
    <p><%= event_type.after_break_time %></p>
  </div>
  <hr>
<% end %>
